SmalltalkCISpec {
  #loading : [
    SCIMetacelloLoadSpec {
      #baseline : 'GToolkit',
      #directory : 'src',
      #platforms : [ #pharo ]
    }
  ],

  #testing : {
    // Include specific TestCases
    #include : {
      #packages : [ ''GToolkit.*'' ],
    },
    #failOnZeroTests : false
    // Exclude specific TestCases from testing
    #exclude : {
      #classes : [ #GtExamplesReleaseTest ]
    },
    #hidePassingTests : true, // Hide passing tests when printing to stdout

  }
}
